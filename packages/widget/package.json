{
  "name": "@lifi/widget",
  "version": "2.0.0-beta.3",
  "description": "LI.FI Widget for cross-chain bridging and swapping. It will drive your multi-chain strategy and attract new users from everywhere.",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./index.d.ts",
  "scripts": {
    "watch": "tsc -w -p ./tsconfig.json",
    "build": "tsc --build --clean && yarn build:version && tsc --build && tsc --build tsconfig.cjs.json && yarn build:copy-files",
    "build:copy-files": "node ../../scripts/copy-files.js && cpy 'src/**/*' '!src/**/*.ts*' build && cpy 'src/**/*' '!src/**/*.ts*' build/cjs",
    "build:version": "node ../../scripts/version.js",
    "pre-commit": "lint-staged",
    "lint": "eslint --ext .tsx --ext .ts ./src",
    "lint:fix": "eslint --ext .tsx --ext .ts ./src --fix",
    "prettier:fix": "prettier --write ./src/."
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn run lint:fix",
      "yarn run prettier:fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Eugene Chybisov <eugene@li.finance>",
  "homepage": "https://github.com/lifinance/widget",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lifinance/widget.git"
  },
  "bugs": {
    "url": "https://github.com/lifinance/widget/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "widget",
    "lifi-widget",
    "bridge",
    "swap",
    "cross-chain",
    "multi-chain",
    "metamask",
    "ethereum",
    "web3",
    "lifi"
  ],
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/experimental": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@lifi/sdk": "^2.0.0-beta.10",
    "@lifi/wallet-management": "^2.0.0-beta.2",
    "@mui/icons-material": "^5.11.16",
    "@mui/lab": "^5.0.0-alpha.127",
    "@mui/material": "^5.12.1",
    "@tanstack/react-query": "^4.29.5",
    "@tanstack/react-virtual": "^3.0.0-beta.54",
    "big.js": "^6.2.1",
    "i18next": "^22.4.15",
    "i18next-browser-languagedetector": "^7.0.1",
    "microdiff": "^1.3.2",
    "mitt": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "react-i18next": "^12.2.2",
    "react-intersection-observer": "^9.4.3",
    "react-router-dom": "^6.10.0",
    "react-timer-hook": "^3.0.5",
    "uuid": "^9.0.0",
    "zustand": "^4.3.7"
  },
  "devDependencies": {
    "cpy-cli": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": "../../.eslintrc"
  },
  "sideEffects": false
}
