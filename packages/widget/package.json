{
  "name": "@lifi/widget",
  "version": "1.21.0",
  "description": "LI.FI Widget for cross-chain bridging and swapping. It will drive your multi-chain strategy and attract new users from everywhere.",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./index.d.ts",
  "scripts": {
    "watch": "tsc -w -p ./tsconfig.json",
    "build": "tsc --build --clean && yarn build:version && tsc --build && tsc --build tsconfig.cjs.json && yarn build:copy-files",
    "build:copy-files": "node ../../scripts/copy-files.js",
    "build:version": "node ../../scripts/version.js",
    "postbuild": "cpy 'src/**/*' '!src/**/*.ts*' build && cpy 'src/**/*' '!src/**/*.ts*' build/cjs",
    "pre-commit": "lint-staged",
    "lint": "eslint --ext .tsx --ext .ts ./src",
    "lint:fix": "eslint --ext .tsx --ext .ts ./src --fix",
    "prettier:fix": "prettier --write ./src/."
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn run lint:fix",
      "yarn run prettier:fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Eugene Chybisov <eugene@li.finance>",
  "homepage": "https://github.com/lifinance/widget",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lifinance/widget.git"
  },
  "bugs": {
    "url": "https://github.com/lifinance/widget/issues"
  },
  "license": "Apache-2.0",
  "keywords": [
    "widget",
    "lifi-widget",
    "bridge",
    "swap",
    "cross-chain",
    "multi-chain",
    "metamask",
    "ethereum",
    "web3",
    "lifi"
  ],
  "dependencies": {
    "@emotion/react": "^11.10.4",
    "@emotion/styled": "^11.10.4",
    "@ethersproject/address": "^5.7.0",
    "@ethersproject/experimental": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@lifi/sdk": "^1.6.0",
    "@lifi/wallet-management": "^1.1.10",
    "@mui/icons-material": "^5.10.9",
    "@mui/lab": "^5.0.0-alpha.104",
    "@mui/material": "^5.10.10",
    "@sentry/integrations": "^7.16.0",
    "@sentry/react": "^7.16.0",
    "@sentry/tracing": "^7.16.0",
    "@tanstack/react-query": "^4.12.0",
    "@tanstack/react-virtual": "^3.0.0-beta.18",
    "big.js": "^6.2.1",
    "i18next": "^21.10.0",
    "i18next-browser-languagedetector": "^6.1.8",
    "immer": "^9.0.15",
    "microdiff": "^1.3.1",
    "mitt": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.38.0",
    "react-i18next": "^12.0.0",
    "react-router-dom": "^6.4.2",
    "react-timer-hook": "^3.0.5",
    "zustand": "^4.1.2"
  },
  "peerDependencies": {
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "eslintConfig": {
    "extends": "../../.eslintrc"
  },
  "sideEffects": false
}
