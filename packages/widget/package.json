{
  "name": "@lifi/widget",
  "version": "1.6.1",
  "description": "LI.FI Widget for cross-chain bridging and swapping. It will drive your multi-chain strategy and attract new users from everywhere.",
  "sideEffects": false,
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "scripts": {
    "watch": "tsc -w -p ./tsconfig.json",
    "build": "tsc --build --clean && yarn build:version && tsc --build && yarn build:copy-files",
    "build:copy-files": "node ../../scripts/copy-files.js",
    "build:version": "node ../../scripts/version.js",
    "postbuild": "cpy 'src/**/*' '!src/**/*.ts*' build",
    "pre-commit": "lint-staged",
    "lint": "eslint --ext .tsx --ext .ts ./src",
    "lint:fix": "eslint --ext .tsx --ext .ts ./src --fix",
    "prettier:fix": "prettier --write ./src/."
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn run lint:fix",
      "yarn run prettier:fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Eugene Chybisov <eugene@li.finance>",
  "homepage": "https://github.com/lifinance/widget",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lifinance/widget.git"
  },
  "bugs": {
    "url": "https://github.com/lifinance/widget/issues"
  },
  "license": "MIT",
  "keywords": [
    "widget",
    "lifi-widget",
    "bridge",
    "swap",
    "cross-chain",
    "multi-chain",
    "metamask",
    "ethereum",
    "web3",
    "lifi"
  ],
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@ethersproject/experimental": "^5.6.3",
    "@ethersproject/providers": "^5.6.8",
    "@lifi/wallet-management": "^1.0.4",
    "@lifinance/sdk": "^1.0.0-beta.14",
    "@mui/icons-material": "^5.8.4",
    "@mui/lab": "^5.0.0-alpha.89",
    "@mui/material": "^5.8.7",
    "@sentry/integrations": "^7.5.1",
    "@sentry/react": "^7.5.1",
    "@sentry/tracing": "^7.5.1",
    "big.js": "^6.2.0",
    "i18next": "^21.8.13",
    "immer": "^9.0.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.33.1",
    "react-i18next": "^11.18.0",
    "react-query": "^4.0.0-beta.23",
    "react-resize-detector": "^7.1.2",
    "react-router-dom": "^6.3.0",
    "react-timer-hook": "^3.0.5",
    "react-virtual": "^2.10.4",
    "zustand": "^4.0.0-rc.1"
  },
  "eslintConfig": {
    "extends": "../../.eslintrc"
  }
}
