{
  "name": "@lifi/widget-playground",
  "version": "1.0.230",
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "pnpm clean && pnpm build:esm && pnpm build:fonts && pnpm build:clean",
    "build:esm": "tsc --build",
    "build:fonts": "cpy 'src/fonts/*' dist/fonts",
    "build:clean": "rm -rf tsconfig.tsbuildinfo ./dist/tsconfig.tsbuildinfo",
    "clean": "pnpm build:clean && rm -rf dist",
    "types": "tsc --noEmit",
    "check:types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "link:bigmi": "pnpm link @bigmi/client",
    "unlink:bigmi": "pnpm link @bigmi/client",
    "link:sdk": "pnpm link @lifi/sdk",
    "unlink:sdk": "pnpm unlink @lifi/sdk",
    "check:circular-deps": "madge --circular $(find ./src -name '*.ts' -o -name '*.tsx')",
    "check:circular-deps-graph": "madge --circular $(find ./src -name '*.ts' -o -name '*.tsx') --image graph.svg"
  },
  "exports": {
    ".": "./src/index.ts",
    "./fonts": "./src/fonts/inter.css",
    "./widget-config": "./src/defaultWidgetConfig.ts"
  },
  "dependencies": {
    "@bigmi/react": "^0.5.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@lifi/sdk": "^3.12.8",
    "@lifi/wallet-management": "workspace:*",
    "@lifi/widget": "workspace:*",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.3.2",
    "@mui/lab": "7.0.0-beta.17",
    "@mui/material": "^7.3.2",
    "@mui/system": "^7.3.2",
    "@mysten/dapp-kit": "^0.18.0",
    "@reown/appkit": "^1.8.6",
    "@reown/appkit-adapter-solana": "^1.8.6",
    "@reown/appkit-adapter-wagmi": "^1.8.6",
    "@reown/appkit-common": "^1.8.6",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/web3.js": "^1.98.4",
    "csstype": "^3.1.3",
    "lodash.isequal": "^4.5.0",
    "microdiff": "^1.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "viem": "^2.37.6",
    "wagmi": "^2.17.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/lodash.isequal": "^4.5.8",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "cpy-cli": "^6.0.0",
    "madge": "^8.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.87.0"
  },
  "private": true
}
