{
  "name": "@lifi/widget-playground",
  "version": "1.0.230",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.d.ts",
  "scripts": {
    "build": "pnpm clean && pnpm build:esm && pnpm build:fonts && pnpm build:clean",
    "build:esm": "tsc --build",
    "build:fonts": "cpy 'src/fonts/*' dist/fonts",
    "build:clean": "rm -rf tsconfig.tsbuildinfo ./dist/tsconfig.tsbuildinfo",
    "clean": "pnpm build:clean && rm -rf dist",
    "types": "tsc --noEmit",
    "check:types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "link:bigmi": "pnpm link --global @bigmi/client",
    "unlink:bigmi": "pnpm link --global @bigmi/client",
    "link:sdk": "pnpm link --global @lifi/sdk",
    "unlink:sdk": "pnpm link --global @lifi/sdk",
    "check:circular-deps": "madge --circular $(find ./src -name '*.ts' -o -name '*.tsx')",
    "check:circular-deps-graph": "madge --circular $(find ./src -name '*.ts' -o -name '*.tsx') --image graph.svg"
  },
  "exports": {
    ".": "./src/index.ts",
    "./fonts": "./src/fonts/inter.css",
    "./widget-config": "./src/defaultWidgetConfig.ts"
  },
  "dependencies": {
    "@bigmi/react": "^0.0.7",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@lifi/sdk": "^3.4.4",
    "@lifi/wallet-management": "workspace:*",
    "@lifi/widget": "workspace:*",
    "@monaco-editor/react": "^4.6.0",
    "@mui/icons-material": "^6.2.0",
    "@mui/lab": "6.0.0-beta.20",
    "@mui/material": "^6.2.0",
    "@mui/system": "^6.2.0",
    "@rainbow-me/rainbowkit": "^2.2.1",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/web3.js": "^1.98.0",
    "@tanstack/react-query": "^5.62.8",
    "csstype": "^3.1.3",
    "lodash.isequal": "^4.5.0",
    "microdiff": "^1.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "viem": "^2.21.55",
    "wagmi": "^2.14.3",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/lodash.isequal": "^4.5.8",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "cpy-cli": "^5.0.0",
    "madge": "^8.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  },
  "private": true
}
