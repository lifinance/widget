{
  "name": "@lifi/widget-playground",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "scripts": {
    "build": "pnpm clean && pnpm build:esm && pnpm build:fonts && pnpm build:clean",
    "build:esm": "tsc --build",
    "build:fonts": "cpy 'src/fonts/*' dist/fonts",
    "build:clean": "rm -rf tsconfig.tsbuildinfo ./dist/tsconfig.tsbuildinfo",
    "clean": "pnpm build:clean && rm -rf dist",
    "types": "tsc --noEmit",
    "check:types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "link:bigmi": "pnpm link @bigmi/client",
    "unlink:bigmi": "pnpm link @bigmi/client",
    "link:sdk": "pnpm link @lifi/sdk @lifi/sdk-provider-ethereum @lifi/sdk-provider-sui @lifi/sdk-provider-solana @lifi/sdk-provider-bitcoin",
    "unlink:sdk": "pnpm unlink @lifi/sdk @lifi/sdk-provider-ethereum @lifi/sdk-provider-sui @lifi/sdk-provider-solana @lifi/sdk-provider-bitcoin",
    "check:circular-deps": "madge --circular $(find ./src -name '*.ts' -o -name '*.tsx')",
    "check:circular-deps-graph": "madge --circular $(find ./src -name '*.ts' -o -name '*.tsx') --image graph.svg"
  },
  "exports": {
    ".": "./src/index.ts",
    "./fonts": "./src/fonts/inter.css",
    "./widget-config": "./src/defaultWidgetConfig.ts"
  },
  "dependencies": {
    "@base-org/account": "~2.4.0",
    "@bigmi/react": "^0.6.3",
    "@coinbase/wallet-sdk": "~4.3.6",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@lifi/sdk": "4.0.0-alpha.4",
    "@lifi/widget": "workspace:*",
    "@lifi/widget-provider-bitcoin": "workspace:*",
    "@lifi/widget-provider-ethereum": "workspace:*",
    "@lifi/widget-provider-solana": "workspace:*",
    "@lifi/widget-provider-sui": "workspace:*",
    "@metamask/sdk": "~0.33.1",
    "@monaco-editor/react": "^4.7.0",
    "@mui/icons-material": "^7.3.5",
    "@mui/lab": "^7.0.1-beta.19",
    "@mui/material": "^7.3.6",
    "@mui/system": "^7.3.5",
    "@mysten/dapp-kit": "^0.19.9",
    "@reown/appkit": "1.8.14",
    "@reown/appkit-adapter-solana": "1.8.14",
    "@reown/appkit-adapter-wagmi": "1.8.14",
    "@reown/appkit-common": "1.8.14",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/web3.js": "^1.98.4",
    "@walletconnect/ethereum-provider": "~2.21.1",
    "csstype": "^3.2.3",
    "lodash.isequal": "^4.5.0",
    "microdiff": "^1.5.0",
    "porto": "^0.2.37",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "viem": "^2.40.2",
    "wagmi": "^3.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/lodash.isequal": "^4.5.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "cpy-cli": "^6.0.0",
    "madge": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.90.0"
  },
  "private": true
}
