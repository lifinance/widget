    "@lifi/widget": "workspace:*",
    "@mui/icons-material": "^5.16.7",
    "@mui/material": "^5.16.7",
    "@mui/system": "^5.16.7",
    "@rainbow-me/rainbowkit": "^2.0.1",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/web3.js": "^1.90.0",
    "@tanstack/react-query": "^5.22.2",
