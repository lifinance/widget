{
  "name": "@lifi/widget-playground",
  "private": true,
  "version": "1.0.180",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn build:esm &&  yarn build:fonts && yarn build:clean",
    "build:esm": "tsc --build",
    "build:fonts": "cpy 'src/fonts/*' dist/fonts",
    "build:clean": "rm -rf tsconfig.tsbuildinfo ./dist/tsconfig.tsbuildinfo ./dist/tsconfig.cjs.tsbuildinfo",
    "clean": "yarn build:clean && rm -rf dist",
    "types": "tsc --noEmit",
    "lint": "eslint --ext .tsx --ext .ts ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@lifi/sdk": "^3.0.0-alpha.55",
    "@lifi/wallet-management": "^3.0.0-alpha.19",
    "@lifi/widget": "^3.0.0-alpha.28",
    "@mui/icons-material": "^5.15.9",
    "@mui/material": "^5.15.7",
    "@mui/material-nextjs": "^5.15.6",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-wallets": "^0.19.26",
    "@solana/web3.js": "^1.90.0",
    "@tanstack/react-query": "^5.20.1",
    "next": "14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "viem": "^2.7.8",
    "wagmi": "^2.5.5",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "typescript": "^5"
  },
  "exports": {
    ".": "./src/index.ts",
    "./fonts": "./src/fonts/inter.css"
  }
}
